<div class="store-container">
  <p id="notice"><%= notice %></p>
  <h1 class='title'>Listed Stock</h1>

  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Category</th>
        <th>Gender</th>
        <th>Colour</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @stores.each do |store| %>
        <tr>
          <td><%= store.product_id %></td>
          <td><%= store.name %></td>
          <td><%= store.category %></td>
          <td><%= store.gender %></td>
          <td><%= store.colour %></td>
          <td><%= store.price %></td>
          <td><%= link_to 'Show', store %></td>
          <td><%= link_to 'Edit', edit_store_path(store) %></td>
          <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn destroy" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Add New Product', new_store_path, class:'btn' %>
</div>
