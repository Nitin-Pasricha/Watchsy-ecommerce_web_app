<!DOCTYPE html>
<html>
  <head>
    <title>Watchsy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Basic -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <!-- Mobile Metas -->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- Site Metas -->
  <%= favicon_link_tag asset_path('fevicon/fevicon.png') %>
  <meta name="keywords" content="" />
  <meta name="description" content="" />
  <meta name="author" content="" />

  </head>

  <body>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <!-- header section strats -->
    
    <header class="header_section" style="box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.25);">
      <div class="container-fluid">
        <nav class="navbar navbar-expand-lg custom_nav-container ">
          <a class="navbar-brand" href="/index.html">
            <span>
              Watchsy
            </span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class=""> </span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav  ">
              
              <li class="nav-item">
                <a class="nav-link" href="/index.html">Home <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/about.html"> About</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/gallery/index.html">Products</a>
              </li>

              <% if(!session[:admin]) %>
                <% if user_signed_in? %>
                  <li class="nav-item">
                    <%= link_to "Edit profile", edit_user_registration_path, class: "nav-link" %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link"  %>
                  </li>
                <% else %>
                  <li class="nav-item">
                    <%= link_to "Sign up", new_user_registration_path, class: "nav-link"  %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "Login", new_user_session_path, class: "nav-link"  %>
                  </li>
                <% end %>
              <% else %>
                <li class="nav-item">
                  <%= link_to "Store", '/stores', class: "nav-link"  %>
                </li>
                <li class="nav-item">
                  <%= link_to "Logout", '/admin/logout', class: "nav-link"  %>
                </li>
              <%end%>

            </ul>
            <div class="search-box">
              <%= form_with url:search_url, method: :post do |f| %>
                <%= f.label:keyword, "üîç" %>
                <%= f.text_field:keyword, placeholder: 'Search for products, brand and more',class:'search-bar' %>
  
              <%end%>
            </div>
            <% if(!session[:admin]) %>
              <div class="user_optio_box">
                <a href="">
                  <i class="fa fa-user" aria-hidden="true"></i>
                </a>
                <%= link_to cart_index_path do %>
                  <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                <% end %>
              </div>
            <% end %>
          </div>
        </nav>
      </div>
    </header>
    <!-- end header section -->
    <%= yield %>

    <!-- info section -->
    <section class="info_section layout_padding2" style="padding-bottom:1rem">
      <div class="container">
        <div class="info_logo">
          <h2>
            Watchsy
          </h2>
        </div>
        <div class="row" style="place-content:center">

          <div class="col-md-3">
            <div class="info_contact">
              <h5>
                Get to know us
              </h5>
              <div>
                <a href='/about' style="color:white">About Us</a>
              </div>
              
            </div>
          </div>
          <div class="col-md-3">
            <div class="info_info">
              <h5>
                Quick Links
              </h5>
              <div>
                <%= link_to 'Home', '/', style:"color:white" %>
              </div>
              <div style="margin-top:0.5rem">
                <%= link_to 'Products', '/gallery/index', style:"color:white" %>
              </div>
              <div style="margin-top:0.5rem">
                <%= link_to 'Signup', '/users/sign_up', style:"color:white" %>
              </div>
              <div style="margin-top:0.5rem">
                <%= link_to 'Login', '/users/sign_in', style:"color:white" %>
              </div>
            </div>
          </div>

          <div class="col-md-3">
            <div class="info_insta">
              <h5>
                Our Collection
              </h5>
              <div class="insta_container">
                <div class="row m-0">
                  <div class="col-4 px-0">
                    <a href="/gallery/index">
                      <div class="insta-box b-1">
                        <%= image_tag "w1.png" %>
                      </div>
                    </a>
                  </div>
                  <div class="col-4 px-0">
                    <a href="/gallery/index">
                      <div class="insta-box b-1">
                        <%= image_tag "w2.png" %>
                      </div>
                    </a>
                  </div>
                  <div class="col-4 px-0">
                    <a href="/gallery/index">
                      <div class="insta-box b-1">
                        <%= image_tag "w3.png" %>
                      </div>
                    </a>
                  </div>
                  <div class="col-4 px-0">
                    <a href="/gallery/index">
                      <div class="insta-box b-1">
                        <%= image_tag "w4.png" %>
                      </div>
                    </a>
                  </div>
                  <div class="col-4 px-0">
                    <a href="/gallery/index">
                      <div class="insta-box b-1">
                        <%= image_tag "w5.png" %>
                      </div>
                    </a>
                  </div>
                  <div class="col-4 px-0">
                    <a href="/gallery/index">
                      <div class="insta-box b-1">
                        <%= image_tag "w6.png" %>
                      </div>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          
        </div>
      </div>
      <div class='link-container'>
        <div class='text' style="text-align:center;margin-top:2rem;color:white;border:none">
          Developed with ‚ù§Ô∏è by <%= link_to 'Nitin Pasricha', "https://in.linkedin.com/in/nitin-pasricha", target:"_blank", style:'color:white' %>
        </div>
      </div>
    </section>

    <!-- end info_section -->

    <!-- footer section -->
    <section class="footer_section">
      <div class="container">
        
        <p>
          Copyright &copy; <span id="displayYear"></span> Watchsy. All Rights Reserved.
        </p>
      </div>
    </section>
    <!-- footer section -->

    <!-- jQery -->
    <%= javascript_pack_tag "jquery-3.js" %>
    <!-- popper js -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
    <!-- bootstrap js -->
    <%= javascript_pack_tag "bootstrap.js" %>
    <!-- custom js -->
    <%= javascript_pack_tag "custom.js" %>
  </body>
</html>
